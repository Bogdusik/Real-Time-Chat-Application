{
  "name": "real-time-chat-application",
  "version": "2.0.0",
  "description": "Real-time chat application with WebSocket support - Full JavaScript stack",
  "main": "server/src/index.js",
  "scripts": {
    "start": "node server/src/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd chat-frontend && npm start",
    "build": "cd chat-frontend && npm run build",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd server && npm test",
    "test:client": "cd chat-frontend && npm test"
  },
  "keywords": [
    "chat",
    "websocket",
    "real-time",
    "express",
    "react",
    "postgresql",
    "sockjs",
    "stomp"
  ],
  "author": "Bogdusik",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

